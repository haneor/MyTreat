<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/themethree"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_main_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/backboad"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:gravity="center"
            android:text="내가 쏜다에 오신것을 환영합니다."
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_main_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/backpanel"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:text="이벤트 참여"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/activity_main_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/backpanel"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:text="번호 추첨"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_main_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/backpanel"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:padding="10dp"
                android:text="랜덤 추첨"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/activity_main_image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/backpanel"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:padding="10dp"
                android:text="룰렛"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_main_image5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/backpanel"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:padding="10dp"
                android:text="추억의\n종이뽑기"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/activity_main_image6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/backpanel"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:gravity="center"
                android:onClick="onClickImageView"
                android:padding="10dp"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>