<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashactivity_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#355c7d"
    android:gravity="center"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splashactivity_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/icon" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="330dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <com.kakao.usermgmt.LoginButton
            android:id="@+id/com_kakao_login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/kakaotalk"
            app:layout_constraintEnd_toEndOf="@+id/kakaotalk"
            app:layout_constraintStart_toStartOf="@+id/kakaotalk"
            app:layout_constraintTop_toTopOf="@+id/kakaotalk" />

        <ImageView
            android:id="@+id/kakaotalk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="212dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:src="@drawable/kakaotalkicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton_non"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="72dp"
            android:background="@drawable/nonmember"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.246"
            app:layout_constraintStart_toEndOf="@+id/kakaotalk"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/notosanskr_demilight_hestia"
        android:gravity="center"
        android:text="※이벤트 기능 사용은 카카오톡 로그인을 해주세요"
        android:textColor="@color/textColor_reversal"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="내가 쏜다!!"
        android:textColor="@color/textColor_reversal"
        android:textSize="40dp"
        android:fontFamily="@font/notosanskr_demilight_hestia"/>

</RelativeLayout>
