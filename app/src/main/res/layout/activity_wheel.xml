<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WheelActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_wheel_toolbar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/themefive"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_wheel_bar"
        android:layout_width="273dp"
        android:layout_height="170dp"
        android:layout_marginTop="304dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wheel_layout"
        app:srcCompat="@drawable/wheel_sub" />

    <Button
        android:id="@+id/button_wheel_start"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/wheel_layout"
        app:layout_constraintEnd_toEndOf="@+id/wheel_layout"
        app:layout_constraintStart_toStartOf="@+id/wheel_layout"
        app:layout_constraintTop_toTopOf="@+id/wheel_layout" />

    <Button
        android:id="@+id/button_wheel_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button"
        android:fontFamily="@font/notosanskr_medium_hestia"
        android:text="아이템 변경"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_wheel_toolbar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/wheel_layout"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/wheel_final"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_wheel_one"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginEnd="112dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:gravity="center"

            android:rotation="12"
            android:text="당첨"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_wheel_two"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:gravity="center"
            android:rotation="83"
            android:text="꽝"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_wheel_one" />

        <TextView
            android:id="@+id/text_wheel_three"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:gravity="center"
            android:rotation="130"
            android:text="당첨"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_wheel_two"
            app:layout_constraintVertical_bias="0.555" />

        <TextView
            android:id="@+id/text_wheel_four"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginBottom="52dp"
            android:layout_marginStart="116dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:gravity="center"
            android:rotation="195"
            android:text="꽝"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_wheel_five"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginBottom="72dp"
            android:layout_marginStart="36dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:gravity="center"
            android:rotation="255"
            android:text="당첨"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            app:layout_constraintBottom_toTopOf="@+id/text_wheel_four"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_wheel_six"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="87dp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:gravity="center"
            android:rotation="-50"
            android:text="꽝"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_wheel_toolbar"
        app:srcCompat="@drawable/down_arrow" />

</android.support.constraint.ConstraintLayout>